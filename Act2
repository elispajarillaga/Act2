#include <iostream>
#include <string>

using namespace std;
int main()
{
    int d, m, y;
    
    cout << "Enter month: "; cin >> m;
    cout << "Enter day: "; cin >> d;
    cout << "Enter year: "; cin >> y;
    
switch (m)
    {
case 1:
    if (d > 0 && d <= 31)
        cout << "January " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 2:
    if (d > 0 && d <= 28)
        cout << "February " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 3:
    if (d > 0 && d <= 31)
        cout << "March " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 4:
    if (d > 0 && d <= 30)
        cout << "April " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 5:
    if (d > 0 && d <= 31)
        cout << "May " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 6:
    if (d > 0 && d <= 30)
        cout << "June " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 7:
    if (d > 0 && d <= 31)
        cout << "July " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 8:
    if (d > 0 && d <= 31)
        cout << "August " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 9:
    if (d > 0 && d <= 30)
        cout << "September " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 10:
    if (d > 0 && d <= 31)
        cout << "October " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 11:
    if (d > 0 && d <= 30)
        cout << "November " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
case 12:
    if (d > 0 && d <= 31)
        cout << "December " << d << ", " << y;
    else
        cout << "Invalid date!";
            break;
            
    }
   
    return 0;
}
